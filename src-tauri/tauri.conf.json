{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ekilisync",
  "version": "0.1.0",
  "identifier": "com.ekilie.sync",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ekiliSync",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.png",
      "icons/logo.png",
      "icons/logo.png",
      "icons/AppIcon.icns",
      "icons/icon.ico"
    ]
  }
}
